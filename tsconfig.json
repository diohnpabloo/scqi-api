{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "typeRoots": ["./node_modules/@types", "./path/to/your/types", "./src/types"],

    "paths": {
      "@/*": ["./src/*"]
    },

    "module": "node16",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "knexfile.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
